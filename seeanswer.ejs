<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title><%= question.title %> - StackIt Answers</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-to-br from-blue-50 via-white to-purple-50 min-h-screen text-gray-800 p-4">

  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-md mt-10">
    <!-- Question -->
    <h1 class="text-3xl font-bold text-blue-700 mb-3"><%= question.title %></h1>
    <p class="text-gray-700 mb-4"><%= question.description %></p>

    <% if (question.image) { %>
      <img src="<%= question.image %>" alt="Question Image" class="rounded-lg mb-4 max-h-80 w-full object-contain">
    <% } %>

    <div class="flex flex-wrap gap-2 mb-4">
      <% question.tags.forEach(tag => { %>
        <span class="px-2 py-1 bg-purple-100 text-purple-700 text-sm rounded-full"><%= tag %></span>
      <% }) %>
    </div>

    <p class="text-sm text-gray-500 mb-4">Asked by <span class="font-semibold"><%= question.author %></span></p>
  </div>

  <!-- Answers Section -->
  <div class="max-w-4xl mx-auto mt-6">
    <h2 class="text-2xl font-bold text-green-700 mb-4">Answers (<%= question.answers.length %>)</h2>

    <% if (question.answers.length === 0) { %>
      <p class="text-gray-500">No answers yet. Be the first to answer!</p>
    <% } %>

    <% question.answers.forEach(ans => { %>
      <div class="bg-white p-5 rounded-lg shadow mb-5">
        <p class="text-gray-800 text-lg mb-2"><%= ans.content %></p> <!-- ✅ Use content instead of text -->

        <% if (ans.image) { %>
          <img src="<%= ans.image %>" alt="Answer Image" class="mt-2 rounded max-h-72 w-full object-contain" />
        <% } %>

        <p class="text-sm text-gray-500 mt-3">Answered by <span class="font-semibold"><%= ans.author || "Anonymous" %></span></p> <!-- ✅ Use author -->
      </div>
    <% }) %>
  </div>

</body>

</html>
